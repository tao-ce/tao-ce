PWD = os.getcwd()

ARTIFACTS = {
    'services/pubsub/cli': 'services/pubsub/cli',
    'services/pubsub/ui': 'services/pubsub/ui',
    'services/pubsub/emulator': 'services/pubsub/emulator',
    'services/firebase': 'services/firebase',
}

PULLS = {
    'services/pubsub/ui': 'ghcr.io/neoscript/pubsub-emulator-ui:2025.02.25',
}

def manifest(pwd=PWD):
    return kustomize("{pwd}/manifests".format(pwd=pwd))

def images(builder):
    builder(
        ref=ARTIFACTS['services/pubsub/cli'],
        context='{}/pubsub-cli'.format(PWD),
        target='export',
        )

    builder(
        ref=ARTIFACTS['services/firebase'],
        context='{}/firebase'.format(PWD),
        target='app-env',
    )

    builder(
        ref=ARTIFACTS['services/pubsub/emulator'],
        context='{}/pubsub-emulator'.format(PWD),
    )

    # builder(
    #     ref=ARTIFACTS['services/pubsub/ui'],
    #     src=PULLS['services/pubsub/ui'],
    #     dockerfile='{}/pubsub-ui.Dockerfile'.format(PWD),
    # )