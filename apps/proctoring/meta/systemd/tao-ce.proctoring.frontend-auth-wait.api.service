[Unit]

[Service]
Type=simple
Environment=NODE_VERSION=22
ExecStart=/bin/sh -c "\
  cd ${TAO_CE_OPT}/proctoring/frontend-auth-wait/bootstrap && \
  PORT=${TAO_CE_SVC_PROCTORING_FRONTENDAUTHWAIT_API_HTTP_PORT} \
  exec /usr/local/libexec/nvm/nvm-exec node sandbox/sandboxApiServer.js \
"
EnvironmentFile=/etc/environment
EnvironmentFile=/etc/tao-ce/setup/envs/dir.env
EnvironmentFile=/etc/tao-ce/setup/envs/svc.env
EnvironmentFile=/etc/tao-ce/setup/envs/proctoring/frontend-auth-wait.env
Restart=always
RestartSec=5s

[Install]
WantedBy=tao-ce.target
