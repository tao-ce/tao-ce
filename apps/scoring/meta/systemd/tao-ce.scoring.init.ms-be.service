[Unit]
ConditionPathExists=!/var/lib/tao-ce/scoring/init.ms-be.lock
After=tao-ce.setup.service
After=tao-ce.scoring.init.service

[Service]
Type=oneshot
ExecStartPre=/bin/sh -c "cp ${TAO_CE_OPT}/scoring/router.php ${TAO_CE_OPT}/scoring/ms-be/"
ExecStartPre=/bin/sh -c "cp ${TAO_CE_OPT}/scoring/router.php ${TAO_CE_OPT}/scoring/ms-be/public/"
ExecStart=bash -c " \
cd ${TAO_CE_OPT}/scoring/ms-be \
&& php bin/console doctrine:database:create --if-not-exists --no-interaction \
&& bin/console doctrine:migrations:migrate --no-interaction \
"
ExecStartPost=/bin/sh -c "echo '1' > /var/lib/tao-ce/scoring/init.ms-be.lock"
EnvironmentFile=/etc/environment
EnvironmentFile=/etc/tao-ce/setup/envs/dir.env
EnvironmentFile=/etc/tao-ce/setup/envs/svc.env
EnvironmentFile=/etc/tao-ce/setup/envs/scoring/backend.env

[Install]
WantedBy=tao-ce.target
