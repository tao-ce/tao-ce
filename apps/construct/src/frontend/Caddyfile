:80 {
    handle_path /backoffice/* {
        @views path */views/*

        header Access-Control-Allow-Origin "https://community.tao.internal"
        header Access-Control-Allow-Credentials true

        handle @views {
                file_server {
                    root /srv/static/construct
                }
            }

        handle {
            rewrite * index.php
            php_fastcgi backend:9741 {
                root /app/construct
                index index.php
            }
         }
    }
    
log {
    output stdout
}
}
