[Unit]

[Service]
Type=simple
ExecStartPre=/bin/sh -c "${TAO_CE_LIBEXEC}/pubsub/provision-pubsub ${TAO_CE_ETC}/setup/pubsub/portal.json"
ExecStart=/bin/sh -c "cd ${TAO_CE_OPT}/portal/backend && exec /usr/local/libexec/nvm/nvm-exec node ./worker.js"
EnvironmentFile=/etc/environment
EnvironmentFile=/etc/tao-ce/setup/envs/dir.env
EnvironmentFile=/etc/tao-ce/setup/envs/svc.env
EnvironmentFile=/etc/tao-ce/setup/envs/portal/backend.env
Environment=NODE_VERSION=22
Restart=always
RestartSec=5s

[Install]
WantedBy=tao-ce.target