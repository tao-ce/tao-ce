[Unit]
Description=Firestore emulator for TAO Community
Before=k3s.service

[Container]
Image=quay.io/tao-ce/services/firestore-emulator:latest
IP=10.247.40.9
Network=deps.network
NetworkAlias=firestore
Environment=PROJECT_ID=demo-tao
Volume=/var/lib/tao-ce/dependencies/firestore:/data:z,U

[Service]
Restart=always
ExecStartPre=mkdir -p /var/lib/tao-ce/dependencies/firestore

[Install]
WantedBy=multi-user.target