[Unit]
Description=PostgresSQL for TAO Community
Before=k3s.service

[Container]
Image=docker.io/postgres:17-alpine
IP=10.247.40.5
Network=deps.network
NetworkAlias=pgsql
Environment=POSTGRES_USER=postgres
Environment=POSTGRES_PASSWORD=postgres
Volume=/var/lib/tao-ce/dependencies/pgsql:/var/lib/postgresql/data:z,U

[Service]
Restart=always
ExecStartPre=mkdir -p /var/lib/tao-ce/dependencies/pgsql

[Install]
WantedBy=multi-user.target