[Unit]
Description=Redis for TAO Community

[Container]
Image=docker.io/valkey/valkey:8-alpine
IP=10.247.40.4
NetworkAlias=redis
Network=deps.network
Volume=/var/lib/tao-ce/dependencies/redis:/data:z,U

[Service]
Restart=always
RestartSec=5s
ExecStartPre=mkdir -p /var/lib/tao-ce/dependencies/redis

[Install]
WantedBy=multi-user.target